<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#696969"
    android:orientation="vertical"
    tools:context="com.example.manan.musicplayer.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="This is the main activity page or starting page of the app from where all other intents / activities are accessible."
        android:textSize="20sp" />

    <Button
        android:id="@+id/all_songs"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#002080"
        android:text="All Songs" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="#002080"
        android:orientation="horizontal">

        <Button
            android:id="@+id/album"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#002080"
            android:text="Album" />

        <Button
            android:id="@+id/artist"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#002080"
            android:text="Artist" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/folder"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#002080"
            android:text="Folder" />

        <Button
            android:id="@+id/playlist"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#002080"
            android:text="Playlist" />
    </LinearLayout>

    <Button
        android:id="@+id/recently_added"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#002080"
        android:text="Recently added" />

    <Button
        android:id="@+id/now_playing"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:background="#002080"
        android:text="Now playing" />

</LinearLayout>
